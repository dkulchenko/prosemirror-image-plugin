{
  "name": "prosemirror-image-plugin",
  "version": "1.0.3",
  "description": "ProseMirror image plugin for advanced image features",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "format": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build && npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "lint": "tsc --noEmit && eslint src --ext .ts",
    "test": "echo \"no test specified\" && exit 0",
    "upgrade-interactive": "npm-check --update",
    "install-peers": "npm-install-peers",
    "publish:np": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/emergence-engineering/prosemirror-image-plugin.git"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "Emergence Engineering",
  "keywords": [
    "ProseMirror",
    "image",
    "drag and drop",
    "D&D",
    "upload"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/emergence-engineering/prosemirror-image-plugin/issues"
  },
  "homepage": "https://gitlab.com/emergence-engineering/prosemirror-image-plugin#readme",
  "peerDependencies": {
    "prosemirror-model": "^1.11.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.15.5",
    "prosemirror-commands": "^1.1.4"
  },
  "devDependencies": {
    "@types/orderedmap": "^1.0.0",
    "@types/prosemirror-commands": "^1.0.3",
    "@types/prosemirror-model": "^1.7.2",
    "@types/prosemirror-state": "^1.2.5",
    "@types/prosemirror-view": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "np": "^7.2.0",
    "npm-check": "^5.9.2",
    "prettier": "^2.2.0",
    "rollup": "^2.36.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "npm-install-peers": "^1.2.1",
    "orderedmap": "^1.1.1",
    "prosemirror-commands": "^1.1.4",
    "prosemirror-model": "^1.12.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-transform": "^1.2.8",
    "prosemirror-view": "^1.16.4"
  }
}
